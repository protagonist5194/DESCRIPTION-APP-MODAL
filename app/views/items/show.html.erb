<div class="jumbotron btn btn-dark">
  <h1 class="display-4">
    <%= @item.name %>
  </h1>
  <p class="lead"><%=@item.description %></p>
  <hr class="my-4">
  <p class="lead">
  <%= link_to "Edit", edit_item_path(@item), class:'btn btn-success' %> 
  <%= link_to "Back", items_path, class: "btn btn-primary" %><br/>
  <%= button_to "Destroy this item", @item, method: :delete, class:'btn btn-danger' %><br/>
  </p>
</div>




